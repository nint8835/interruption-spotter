package ui

import (
	"fmt"
	"github.com/nint8835/interruption-spotter/pkg/server/static"
)

func getTitleString(title string) string {
	if title == "" {
		return "Interruption Spotter"
	}

	return fmt.Sprintf("%s - Interruption Spotter", title)
}

templ Layout(title string) {
